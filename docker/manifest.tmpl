image: promhippie/github-exporter:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  - image: promhippie/github-exporter:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:
      architecture: amd64
      os: linux
  - image: promhippie/github-exporter:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-i386
    platform:
      architecture: 386
      os: linux
  - image: promhippie/github-exporter:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64v8
    platform:
      architecture: arm64
      variant: v8
      os: linux
  - image: promhippie/github-exporter:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm32v6
    platform:
      architecture: arm
      variant: v6
      os: linux
